@model ProjectWeb.Domain.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
    Layout = "_Layout_Account";
}

<div class="row d-flex justify-content-center align-items-center vh-100 m-1 m-md-0">
    <div class="col-12 col-lg-5">
        <div class="card custom-box-shadow">
            <div class="card-body p-3 p-md-5">
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/imgs/Web Maker-1.png" width="200" alt="Register-Icon" />
                    </a>
                </div>
                <form method="post" asp-controller="Account" asp-action="ResetPassword">
                    <!-- ModelState -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>
                    
                    <p>
                        کلمه عبور جدید خود را وارد کنید : 
                    </p>
                    
                    <!-- Password -->
                    <div class="InputWithIcon">
                        <input asp-for="Password" class="input-custom" placeholder="کلمه عبور جدید" id="reg-pass-input" />
                        <i class='bx bx-lock-alt' id="reg-pass-icon"></i>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="InputWithIcon">
                        <input asp-for="RePassword" class="input-custom" placeholder="تکرار کلمه عبور جدید" id="reg-passconfirm-input" />
                        <i class='bx bx-lock-alt' id="reg-passconfirm-icon"></i>
                        <span asp-validation-for="RePassword" class="text-danger small"></span>
                    </div>

                    <input type="hidden" asp-for="Captcha" />
                    <input type="hidden" asp-for="ActivationCode" />

                    <button type="submit" class="btn btn-account">بازیابی کلمه عبور</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <partial name="_GoogleReCaptcha"/>
}
