@model ProjectWeb.Domain.ViewModels.Account.EditAccountViewModel
@{
    ViewData["Title"] = "ویرایش حساب کاربری " + Model.UserName;
    Layout = "_Layout_Profile";
}

<div class="card custom-box-shadow">
    <div class="card-header">
        <p class="font-weight-bold">ویرایش اطلاعات کاربری</p>
    </div>
    <div class="card-body profile-font">
        <form asp-controller="Account" asp-action="EditAccount" method="post" onsubmit="return CheckInput()">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <i class="far fa-user ml-2"></i>
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control input-custom" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <i class="far fa-user ml-2"></i>
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control input-custom" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-4">
                <i class="far fa-envelope-open ml-2"></i>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control input-custom" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <i class='fas fa-phone ml-2'></i>
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control input-custom" id="phone-input" onchange="CheckInput()" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <p id="phone-error" class="text-danger"></p>
            </div>

            <input hidden asp-for="UserId" />

            <button type="submit" class="btn btn-edit">ویرایش اطلاعات</button>
        </form>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}