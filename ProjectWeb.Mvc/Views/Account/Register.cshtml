@model RegisterViewModel
@{
    ViewData["Title"] = "عضویت در سایت";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}

<div data-aos="fade-down" data-aos-duration="1000">
    <div class="row d-flex justify-content-center align-items-center vh-100 m-1 m-md-0">
        <div class="col-12 col-lg-5">
            <div class="card custom-box-shadow">
                <div class="card-body p-3 p-md-5">
                    <div class="text-center">
                        <img src="~/imgs/icons8-user-100.png" alt="Register-Icon" />
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p>عضویت</p>
                        <a asp-controller="Home" asp-action="Index" class="text-hover">
                            <i class="fas fa-home"></i>
                        </a>
                    </div>
                    <form method="post" asp-controller="Account" asp-action="Register">
                        <!-- ModelState -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <!-- UserName -->
                        <div class="InputWithIcon">
                            <input asp-for="UserName" class="input-custom" placeholder="نام کاربری" id="reg-user-input" />
                            <i class='bx bx-user' id="reg-user-icon"></i>
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="InputWithIcon">
                            <input asp-for="Email" class="input-custom" placeholder="ایمیل" id="reg-email-input" />
                            <i class='bx bx-envelope' id="reg-email-icon"></i>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="InputWithIcon">
                            <input asp-for="Password" class="input-custom" placeholder="کلمه عبور" id="reg-pass-input" />
                            <i class='bx bx-lock-alt' id="reg-pass-icon"></i>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="InputWithIcon">
                            <input asp-for="ConfirmPassword" class="input-custom" placeholder="تکرار کلمه عبور" id="reg-passconfirm-input"/>
                            <i class='bx bx-lock-alt' id="reg-passconfirm-icon"></i>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>


                        <button type="submit" class="btn btn-account">عضویت</button>
                    </form>

                    <hr />

                    <p class="text-center">
                        <i class="fas fa-user-check"></i>
                        اکانت دارید؟ همین حالا <a asp-controller="Account" asp-action="Login" class="text-hover font-weight-bold">وارد</a> شوید!
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var regUserInput = document.getElementById('reg-user-input');
        regUserInput.addEventListener("focusin", function () {
            let icon = document.getElementById('reg-user-icon');
            icon.style.color = "#54BAB9";
            regUserInput.style.outline = "none";
            regUserInput.style.borderBottom = "2px solid #54BAB9";
        });
        regUserInput.addEventListener("focusout", function () {
            let icon = document.getElementById('reg-user-icon');
            if (regUserInput.value == "") {
                icon.style.color = "red";
                regUserInput.style.borderBottom = "2px solid red";
            }
            else {
                icon.style.color = "#7e8388";
                regUserInput.style.borderBottom = "1px solid #d1d4d7";
            }
        });

        var regEmailInput = document.getElementById('reg-email-input');
        regEmailInput.addEventListener("focusin", function () {
            let icon = document.getElementById('reg-email-icon');
