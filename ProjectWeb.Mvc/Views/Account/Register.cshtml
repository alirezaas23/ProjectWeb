@model RegisterViewModel
@{
    ViewData["Title"] = "عضویت در سایت";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}

<div data-aos="fade-down" data-aos-duration="1000">
    <div class="row d-flex justify-content-center align-items-center vh-100 m-1 m-md-0">
        <div class="col-12 col-lg-5">
            <div class="card">
                <div class="card-body p-3 p-md-5">
                    <div class="text-center">
                        <img src="~/imgs/icons8-user-100.png" alt="Register-Icon" />
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p>عضویت</p>
                        <a asp-controller="Home" asp-action="Index" class="text-hover">
                            <i class="fas fa-home"></i>
                            صفحه خانه
                        </a>
                    </div>
                    <form method="post" asp-controller="Account" asp-action="Register">
                        <!-- ModelState -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <!-- UserName -->
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control input-custom" placeholder="نام کاربری" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <input asp-for="Email" class="form-control input-custom" placeholder="ایمیل" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group">
                            <input asp-for="Password" class="form-control input-custom" placeholder="کلمه عبور" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control input-custom" placeholder="تکرار کلمه عبور" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>


                        <button type="submit" class="btn btn-account">عضویت</button>
                    </form>

                    <hr />

                    <p class="text-center">
                        <i class="fas fa-user-check"></i>
                        اکانت دارید؟ همین حالا <a asp-controller="Account" asp-action="Login" class="text-hover font-weight-bold">وارد</a> شوید!
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }