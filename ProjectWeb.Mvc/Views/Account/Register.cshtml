@model ProjectWeb.Domain.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "عضویت در سایت";
    Layout = "_Layout_Account";
}

<div class="row d-flex justify-content-center align-items-center vh-100 m-1 m-md-0">
    <div class="col-12 col-lg-5">
        <div class="card custom-box-shadow">
            <div class="card-body p-3 p-md-5">
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/imgs/Web Maker-1.png" width="200" alt="Register-Icon" />
                    </a>
                </div>
                <form method="post" asp-controller="Account" asp-action="Register">
                    <!-- ModelState -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                    <!-- Email -->
                    <div class="InputWithIcon">
                        <input asp-for="Email" class="input-custom" placeholder="ایمیل" id="reg-email-input" />
                        <i class='bx bx-envelope' id="reg-email-icon"></i>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="InputWithIcon">
                        <input asp-for="Password" class="input-custom" placeholder="کلمه عبور" id="reg-pass-input" />
                        <i class='bx bx-lock-alt' id="reg-pass-icon"></i>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="InputWithIcon">
                        <input asp-for="RePassword" class="input-custom" placeholder="تکرار کلمه عبور" id="reg-passconfirm-input" />
                        <i class='bx bx-lock-alt' id="reg-passconfirm-icon"></i>
                        <span asp-validation-for="RePassword" class="text-danger small"></span>
                    </div>
                    
                    <input type="hidden" asp-for="Captcha"/>

                    <button type="submit" class="btn btn-account">عضویت</button>
                </form>

                <hr />
                
                <p>
                    <i class="fas fa-user-check"></i>
                    اکانت دارید؟ <a asp-controller="Account" asp-action="Login" class="text-right text-hover">وارد</a> شوید.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>

    <partial name="_GoogleReCaptcha" />
}