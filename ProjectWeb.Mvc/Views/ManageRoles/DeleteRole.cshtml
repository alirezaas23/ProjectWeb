@model ShowRoleViewModel
@{
    ViewData["Title"] = "DeleteRole";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div data-aos="fade-down">
    <div class="row d-flex justify-content-center align-items-center m-1 m-md-0 vh-100">
        <div class="col-12 col-lg-5">
            <div class="card">
                <div class="card-body p-3 p-md-5">
                    <div class="d-flex justify-content-between mb-2">
                        <p>حذف مقام <span class="font-weight-bold">@Model.RoleName</span></p>
                        <a asp-controller="ManageRoles" asp-action="Index" class="text-hover" title="بازگشت به لیست مقام ها">
                            <i class="fas fa-home"></i>
                        </a>
                    </div>

                    <form method="post" asp-controller="ManageRoles" asp-action="DeleteRole" asp-route-id="@Model.RoleId">
                        <h4>نام مقام :</h4>
                        <p class="text-muted">
                            @Model.RoleName
                        </p>

                        <hr />
                        <p>
                            <i class="fas fa-exclamation-circle" style="color:#EB1D36;"></i>
                            آیا میخواهید این مقام را حذف کنید؟
                        </p>
                        <button type="submit" class="btn btn-delete">حذف مقام</button>
                    </form>

                    <hr />

                    <p class="text-center small">
                        <i class="fas fa-edit"></i>
                        برای ویرایش مقام <a asp-controller="ManageRoles" asp-action="EditRole" asp-route-id="@Model.RoleId" class="font-weight-bold text-hover">اینجا</a> بزنید
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $("header").hide();
        $("footer").hide();
    </script>
}