@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    int row = 1;
}

<a asp-controller="ManageRoles" asp-action="AddRole" class="text-hover">
    افزودن مقام جدید
</a>

<hr />

@{
    if (!Model.Any())
    {
        <div class="alert alert-danger">
            هیچ مقامی یافت نشد
        </div>
    }
    else
    {
        <table class="table text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>نام مقام</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@row</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-controller="ManageRoles" asp-action="DeleteRole" asp-route-id="@item.Id" class="text-hover">حذف مقام</a> /
                            <a asp-controller="ManageRoles" asp-action="EditRole" asp-route-id="@item.Id" class="text-hover">ویرایش مقام</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

