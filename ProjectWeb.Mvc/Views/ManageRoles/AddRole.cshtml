@model AddRoleViewModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div data-aos="fade-down">
    <div class="row d-flex justify-content-center align-items-center vh-100 m-1 m-md-0">
        <div class="col-12 col-lg-5">
            <div class="card">
                <div class="card-body p-3 p-md-5">
                    <div class="d-flex justify-content-between mb-2">
                        <p>افزودن مقام</p>
                        <a asp-controller="ManageRoles" asp-action="Index" class="text-hover" title="بازگشت به لیست مقام ها">
                            <i class="fas fa-home"></i>
                        </a>
                    </div>
                    <form method="post" asp-controller="ManageRoles" asp-action="AddRole">
                        <!-- ModelState -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- RoleName -->
                        <div class="form-group">
                            <input asp-for="RoleName" class="form-control input-custom" placeholder="نام مقام" />
                            <span asp-validation-for="RoleName" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-role">افزودن مقام</button>
                    </form>

                    <hr />

                    <p class="text-center small">
                        <i class="fas fa-user-check"></i>
                        برای افزودن مقام به کاربر <a asp-controller="ManageUsers" asp-action="Index" class="font-weight-bold text-hover">اینجا</a> بزنید
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("header").hide();
        $("footer").hide();
    </script>
    }