@model AddUserToRoleViewModel
@{
    ViewData["Title"] = "AddUserToRole";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="row d-flex justify-content-center align-items-center vh-100 m-1 m-md-0">
    <div class="col-12 col-lg-5">
        <div class="card">
            <div class="card-body p-3 p-md-5">
                <div class="d-flex justify-content-between mb-2">
                    <p>افزودن مقام</p>
                    <a asp-controller="ManageUsers" asp-action="Index" class="text-hover">
                        <i class="fas fa-home"></i>
                        لیست کاربران
                    </a>
                </div>
                @{
                    if (!Model.UserRoles.Any())
                    {
                        <div class="alert alert-danger">
                            هیچ مقامی یافت نشد
                        </div>
                    }
                    else
                    {
                        <form method="post" asp-controller="ManageUsers" asp-action="AddUserToRole">
                            <!-- modelState -->
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            @foreach (var item in Model.UserRoles)
                            {
                                <div class="form-group">
                                    <input asp-for="@item.IsSelected"/>
                                    <label asp-for="@item.RoleName"></label>

                                    <input hidden asp-for="@item.RoleName" />
                                </div>
                            }

                            <input hidden asp-for="@Model.UserId" />

                            <button type="submit" class="btn btn-role">افزودن مقام به کاربر</button>
                        </form>

                        <hr />

                        <p class="text-center small">
                            <i class="fas fa-user-check"></i>
                            برای افزودن مقام جدید <a asp-controller="ManageRoles" asp-action="AddRole" class="font-weight-bold text-hover">اینجا</a> بزنید
                        </p>
                    }
                }
            </div>
        </div>
    </div>
</div>
