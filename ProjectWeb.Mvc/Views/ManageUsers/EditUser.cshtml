@model ShowUserViewModel
@using Microsoft.AspNetCore.Identity
@using ProjectWeb.Domain.Models
@inject UserManager<UserApp> _userManager
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div data-aos="fade-down" data-aos-duration="1000">
    <div class="row d-flex justify-content-center align-items-center vh-100 m-1 m-md-0">
        <div class="col-12 col-lg-5">
            <div class="card">
                <div class="card-body p-3 p-md-5">
                    <div class="d-flex justify-content-between mb-2">
                        @{
                            var user = await _userManager.FindByIdAsync(Model.UserId);
                            <p>ویرایش کاربر <span class="font-weight-bold">@user.UserName</span></p>
                        }
                        <a asp-controller="ManageUsers" asp-action="Index" class="text-hover" title="بازگشت به لیست کاربران">
                            <i class="fas fa-home"></i>
                        </a>
                    </div>

                    <hr />

                    <form method="post" asp-controller="ManageUsers" asp-action="EditUser">
                        <!-- ModelState -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- UserId -->
                        <input hidden asp-for="UserId" />

                        <!-- UserEmail -->
                        <h4>ایمیل کاربر :</h4>
                        <p class="text-muted">@Model.UserEmail</p>

                        <!-- UserName -->
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control input-custom" placeholder="نام کاربری" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-edit">ویرایش کاربر</button>
                    </form>

                    <hr />
                    <p class="text-center small">
                        <i class="fas fa-user-times"></i>
                        برای حذف کاربر <a asp-controller="ManageUsers" asp-action="DeleteUser" asp-route-id="@Model.UserId" class="text-hover font-weight-bold">اینجا</a> بزنید.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("header").hide();
        $("footer").hide();
    </script>
    }