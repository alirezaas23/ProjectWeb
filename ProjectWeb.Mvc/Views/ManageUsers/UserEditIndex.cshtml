@model ShowUserViewModel
@using Microsoft.AspNetCore.Identity
@using ProjectWeb.Domain.Models
@inject UserManager<UserApp> _userManager
@{
    ViewData["Title"] = "UserEditIndex";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div data-aos="fade-down" data-aos-duration="1000">
    <div class="row d-flex justify-content-center align-items-center vh-100 m-1 m-md-0">
        <div class="col-12 col-lg-5">
            <div class="card custom-box-shadow">
                <div class="card-body p-3 p-md-5">
                    <div class="d-flex justify-content-between mb-2">
                        @{
                            var user = await _userManager.FindByIdAsync(Model.UserId);
                            <p>تنظیمات کاربر <span class="font-weight-bold">@user.UserName</span></p>
                        }
                        <a asp-controller="ManageUsers" asp-action="Index" class="text-hover custom-tooltip" data-toggle="tooltip" data-placement="top"
                           title="بازگشت به لیست کاربران">
                            <i class="fas fa-home"></i>
                        </a>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-12 col-xl-6">
                            <a asp-controller="ManageUsers" asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-edit-user btn-block">
                                ویرایش اطلاعات
                            </a>
                        </div>
                        <div class="col-sm-12 col-xl-6">
                            <a asp-controller="ManageUsers" asp-action="DeleteUser" asp-route-id="@Model.UserId" class="btn btn-delete-user btn-block mt-2 mt-xl-0">
                                حذف کاربر
                            </a>
                        </div>
                        <div class="col-sm-12 col-xl-6">
                            <a asp-controller="ManageUsers" asp-action="AddUserToRole" asp-route-id="@Model.UserId" class="btn btn-addrole-user btn-block mt-2">
                                افزودن مقام
                            </a>
                        </div>
                        <div class="col-sm-12 col-xl-6">
                            <a asp-controller="ManageUsers" asp-action="DeleteUserFromRole" asp-route-id="@Model.UserId" class="btn btn-delete-user btn-block mt-2">
                                حذف مقام
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("header").hide();
        $("footer").hide();
    </script>
}