@model IEnumerable<ShowUsersViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    int row = 1;
}

@{
    if (!Model.Any())
    {
        <div class="alert alert-danger">
            کاربری یافت نشد
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12">
                    <div class="card custom-box-shadow mb-3">
                        <div class="card-body">
                            <h3>
                                کاربر شماره @row
                            </h3>
                            <h4 class="font-weight-bold">نام کاربری :</h4>
                            <p class="text-muted">@item.UserName</p>

                            <h4 class="font-weight-bold">ایمیل کاربر :</h4>
                            <p class="text-muted">@item.UserEmail</p>
                            <hr />
                            <div class="mb-2">
                                <a asp-controller="ManageUsers" asp-action="EditUser" asp-route-id="@item.UserId" class="btn btn-edit-user">
                                    ویرایش اطلاعات
                                </a> 
                                <a asp-controller="ManageUsers" asp-action="DeleteUser" asp-route-id="@item.UserId" class="btn btn-delete-user">
                                    حذف کاربر
                                </a> 
                                <a asp-controller="ManageUsers" asp-action="AddUserToRole" asp-route-id="@item.UserId" class="btn btn-addrole-user">
                                    افزودن مقام
                                </a> 
                                <a asp-controller="ManageUsers" asp-action="DeleteUserFromRole" asp-route-id="@item.UserId" class="btn btn-delete-user">
                                    حذف مقام
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                row++;
            }
        </div>
    }
}

