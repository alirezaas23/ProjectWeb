@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using ProjectWeb.Domain.Models
@inject SignInManager<UserApp> _signInManager
@inject UserManager<UserApp> _userManager
<nav id="responsive-nav">
    <ul>
        <li class="p-3">
            <img src="~/imgs/Web Maker-1.png" alt="Logo" height="100" />
        </li>
        @{
            var user = await _userManager.FindByIdAsync(User.FindFirstValue(ClaimTypes.NameIdentifier));
            if (_signInManager.IsSignedIn(User))
            {
                <li class="user-nav-item">
                    <i class="fas fa-user"></i>
                    <span>@user.UserName</span>
                </li>
                @if (User.IsInRole("ادمین"))
                {
                    <li>
                        <a asp-controller="Admin" asp-action="Index">
                            صفحه مدیریت سایت
                        </a>
                    </li>
                }
                <li>
                    <a asp-controller="Account" asp-action="ShowProfile" asp-route-id="@user.Id">
                        <i class="fas fa-user-circle"></i>
                        مشاهده حساب کاربری
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="EditAccount" asp-route-id="@user.Id">
                        <i class="fas fa-user-edit"></i>
                        ویرایش حساب کاربری
                    </a>
                </li>
                <li>
                    <a asp-controller="Order" asp-action="ShowOrder">
                        <i class="fas fa-shopping-basket"></i>
                        سبد خرید
                    </a>
                </li>
                <li>
                    <a asp-controller="Order" asp-action="MyOrders" asp-route-userId="@user.Id">
                        <i class="fas fa-cart-arrow-down"></i>
                        سفارشات من
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="LogOut">
                        <i class="fas fa-sign-out-alt"></i>
                        خروج از حساب کاربری
                    </a>
                </li>

            }
            else
            {
                <li class="">
                    <i class="fas fa-user"></i>
                    <a asp-controller="Account" asp-action="Login" class="nav-text">ورود</a> /
                    <a asp-controller="Account" asp-action="Register" class="nav-text">عضویت</a>
                </li>
            }
        }
    </ul>
</nav>